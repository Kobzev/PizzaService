<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<bean name = "pizzaRepository" class="com.epam.pizzaservice.repository.TestPizzaRepository" init-method="init"/>
	<bean name = "orderRepository" class="com.epam.pizzaservice.repository.TestOrderRepository" />
	
	<bean name="orderService" class="com.epam.pizzaservice.service.SimpleOrderService">
		<constructor-arg ref="orderRepository"/>
		<constructor-arg ref="pizzaRepository"/>
	</bean>
	
	<!-- init method here with anonimus beans with list
	bean as list
	 -->

</beans>
